<h1>Listing pages</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Type</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.id %></td>
        <td><%= page.name %></td>
        <td><%= page.experiment_type %></td>
        <td><%= link_to 'Show', shortcut_path( page.name ), :target => '_NEW' %></td>
        <td><%= link_to 'Edit', edit_admin_page_path( page ) %></td>
        <td><%= link_to 'Destroy', admin_page_path( page ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_admin_page_path %>
