<h1>Listing pages</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>A/B/Multivariate</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <%
         hypothesis = nil
         hypothesis = 'A' if page.a?
         hypothesis = 'B' if page.b?
         hypothesis = 'M' if page.multivariate?
      %>

      <tr>
        <td><%= page.id %></td>
        <td><%= page.name %></td>
        <td><%= hypothesis %></td>
        <td><%= link_to 'Show', page_path( page ) %></td>
        <td><%= link_to 'Edit', edit_admin_page_path( page ) %></td>
        <td><%= link_to 'Destroy', admin_page_path( page ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

